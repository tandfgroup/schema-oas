sh_success "LINT script completed successfully"; fi
# **************************************************************************************************
# ==================================================================================================
# ==================================================================================================
# --------------------------------------------------------------------------------------------------


# --------------------------------------------------------------------------------------------------
# ==================================================================================================
# ==================================================================================================
# **************************************************************************************************
#
#  88888888ba   88        88  88  88           88888888ba,
#  88      "8b  88        88  88  88           88      `"8b
#  88      ,8P  88        88  88  88           88        `8b
#  88aaaaaa8P'  88        88  88  88           88         88
#  88""""""8b,  88        88  88  88           88         88
#  88      `8b  88        88  88  88           88         8P
#  88      a8P  Y8a.    .a8P  88  88           88      .a8P
#  88888888P"    `"Y8888Y"'   88  88888888888  88888888Y"'
#
# ==================================================================================================
if ( $RUN_BUILD ) && ( $RUN_DEBUG ); then sh_alert "DEBUG MODE: BUILD scripting bypassed"
elif ( $RUN_BUILD ); then sh_heading "BUILD script started"
# --------------------------------------------------------------------------------------------------
# SCRIPTING GOES HERE:
# --------------------------------------------------------------------------------------------------

  (rm -rf "$TEMP_BUILD_PATH") < /dev/null 2> /dev/null
  sh_info "Building application"

  sh_info "Generating compiled specification"
  SPEC_DIR="./spec"
  # find spec/schema -type f -name '*.yaml' -exec cat {} + >> spec/schema.yaml
  echo "# this file is auto-generated. do not change." > "$SPEC_DIR/schema.yaml"
  echo "# this file is auto-generated. do not change." > "$SPEC_DIR/schema-ref.yaml"
  # compile schema specs
  NL=$'\n'
  for file in ./spec/schema/*.yaml; do
    [ -e "$file" ] || continue
    filename=$(echo "$file" | sed -r "s/.+\\/(.+)\\..+/\\1/")
    schema_def=$(cat "$file")
    echo "$schema_def" >> "./spec/schema.yaml"
    schema_def_ref="${filename}:${NL}  \$ref: ./schema/${filename}.yaml"
    echo "$schema_def_ref" >> "$SPEC_DIR/schema-ref.yaml"
  done
  # compile primary swagger/oas properties
  {
    cat "$SPEC_DIR/head.yaml"
    cat "$SPEC_DIR/info.yaml";
    cat "$SPEC_DIR/paths.yaml";
    cat "$SPEC_DIR/components.yaml";
    cat "$SPEC_DIR/schemas.yaml" | sed 's/^/  /';
  } > "$SPEC_DIR/swagger.yaml"
  # duplicate swagger/oas for $ref-based specs
  cp -a "$SPEC_DIR/swagger.yaml" "$SPEC_DIR/swagger-ref.yaml"
  # add $ref-based schema to swagger/oas $ref-based specs
  {
    cat "$SPEC_DIR/schema-ref.yaml" | sed 's/^/    /';
  } >> "$SPEC_DIR/swagger-ref.yaml"
  # add schema to swagger/oas
  {
    cat "$SPEC_DIR/schema.yaml" | sed 's/^/    /';
  } >> "$SPEC_DIR/swagger.yaml"
  # search/replace $ref file references with local-object references
  sed -i -E "s/[^']+\\.yaml\\#\\//\\#\\/components\\/schemas\\//g" "$SPEC_DIR/swagger.yaml"

# --------------------------------------------------------------------------------------------------
sh_success "BUILD script completed successfully"; fi
